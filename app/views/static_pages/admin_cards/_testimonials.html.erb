<% @testimonials.each do |t| %>

<div class="mdl-card mdl-cell mdl-shadow--3dp mdl-cell--12-col">
  <div class="mdl-card__title mdl-color--purple-300">
    <h2 class="mdl-card__title-text"><%= t.cust_name %></h2>
  </div>
  <div class="mdl-card__supporting-text mdl-card--border">
    <%= t.short_description %>
  </div>
  <div class="mdl-card__actions ">
    <a class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect">Edit</a>
    <a class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect">Deactivate</a>
    <a class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect">Activate</a>
    <a class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect">Delete Testimonial</a>
  </div>
</div>

<% end %>
