<div class="mdl-grid">
	<div class="mdl-grid mdl-cell--12-col">
		<h3>The Company</h3>
		<% if current_user %>
			<%= link_to "Create new walker", new_walker_path %>
		<% end %>
	</div>
</div>

<div class="mdl-grid">
	<!-- <div class="mdl-cell mdl-cell--3-col"></div> -->
	<div class="mdl-card mdl-cell mdl-cell--12-col">
		<div class="">
			<div class="mdl-card__title">
				<%= @contents[0].heading %>
			</div>
			<div class="mdl-card__supporting-text">
				<%= @contents[0].text %>
			</div>
		</div>
			<div id="walker-list">
				<% @walkers.each do |w| %>
					<% if w.active || current_user %>
						<div class="mdl-card walker-list-item">
							<div class="mdl-card__title">
							<%= w.fname %> | <%= w.role %><% if !w.active %> | (inactive) <% end -%>
							</div>
							<div class="walker-list-body" style="display: none">
								<div class="mdl-card__supporting-text" >
									<%= w.bio %>
								</div>
								<% if current_user %>
									<div class="mdl-card__actions mdl-card--border">
										<a class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect">
											<%= link_to "Edit walker", edit_walker_path(w) %>
										</a>
									</div>
								<% end %>
							</div>
						</div>
					<% end -%>
				<% end -%>
			</div>
	</div>
	<div class="mdl-cell mdl-cell--3-col"></div>
</div>

